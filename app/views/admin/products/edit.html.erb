<h1> Edit Product </h1>

<%= simple_form_for [:admin, @product] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :quantity %>
<%= f.input :price %>

 <% if @product.image.present? %>
   <span> Current product picture <br>
   <%= image_tag(@product.image.thumb.url) %>
  </span>
 <% end %>

   <%= f.input :image, as: :file %>


<%= f.submit "Edit", class: "btn btn-success" %>

<% end %>
