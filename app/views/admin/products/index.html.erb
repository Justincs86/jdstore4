<h1> Product List </h1>

<div class="pull-right">
  <%= link_to("Add New Product", new_admin_product_path, class: "btn btn-primary") %>
</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> #</th>
          <th> Product Pic</th>
          <th> Name</th>
          <th> Price</th>
          <th> Option</th>
      </tr>
  </thead>
  <tbody>

    <% @products.each do |product| %>
      <tr>
          <td> <%= product.id %></td>
          <td>
            <!-- wrap whole pic -->
              <%= link_to product_path(product) do %>
                <% if product.image.present? %>
                  <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            <!-- wrap whole pic end -->
          </td>
          <td> <%= product.title %></td>
          <td> <%= product.price %></td>
          <td>
              <%= link_to("Edit", edit_admin_product_path(product), class: "btn btn-sm btn-success") %>
              <%= link_to("Delete", admin_product_path(product), method: :delete, :data => { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" )%>
          </td>
      </tr>
      <% end %>
  </tbody>

</table>
