<div class="row">
  <div class="col-md-12">

    <h2> Order List <br>
      <small> <%= link_to("Order link", order_url(@order.token)) %></small>
    </h2>

    <table class="table table-bordered">
      <thead>
          <tr>
              <th width="80%"> Product Detail </th>
              <th> Price</th>
              <th> Quantity</th>
              <th> Sub-total </th>
          </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>

          <tr>
              <td> <%= product_list.product_name %></td>
              <td> <%= product_list.product_price %></td>
              <td> <%= product_list.quantity %> </td>
              <td> <%= product_list.product_price * product_list.quantity %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>


      <div class="total clearfix">
        <span class="pull-right">
          Total <%= @order.total %>
        </span>
      </div>


      <hr>

      <h1> Mailing Infomation </h1>

      <table  class="table table-striped table-bordered">
        <tbody>
            <tr>
                <td> Purchaser </td>
            </tr>
            <tr>
                <td> <%= @order.billing_name %> - <%= @order.billing_address %></td>
            </tr>
            <tr>
                <td> Receiver </td>
            </tr>
            <tr>
                <td> <%= @order.shipping_name %> - <%= @order.billing_address %> </td>
            </tr>
        </tbody>
      </table>
  </div>

</div>
